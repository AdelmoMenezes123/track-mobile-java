<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".Home">

        <!--   TEXTO E ICONE-->
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TEXTO-->
            <TextView style="@style/textVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:text="Olá,"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <!--ICON-->
            <ImageView style="@style/iconVoltar"
                android:layout_width="36dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_sino"
                />
        </RelativeLayout>

        <!--  TEXTO VISITANTE-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="0dp"
            android:text="visitante,"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <!-- BUTTON INITIAL-->
        <Button style="@style/button_secondary"
            android:text="MENU PRINCIPAL"
            android:layout_marginTop="15dp"
            android:background="@drawable/radius"/>

        <!-- BUTOES DE CONFIG E NAVEGACAO-->
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--BUTTOM CONFIG-->
            <View style="@style/button_navegacao"
                android:id="@+id/configuracoes"
                android:background="@drawable/radius"
                android:backgroundTint="@color/purpleTransp" />

            <!-- ICON CONFIG -->
            <ImageView style="@style/img_navegacao"
                android:background="@drawable/config"
                android:rotation="-21" />

            <!--BUTTOM NAV-->
            <View
                android:id="@+id/navegacao"
                style="@style/button_navegacao"
                android:layout_alignParentRight="true"
                android:background="@drawable/radius"
                android:backgroundTint="@color/orangeTransp" />

            <!--ICON NAV-->
            <ImageView style="@style/img_navegacao"
                android:layout_marginEnd="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/nav" />
        </RelativeLayout>

        <!-- BUTOES DE GNSS E HISTORICO-->
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--BUTTOM GNSS-->
            <View style="@style/button_navegacao"
                android:id="@+id/gnss"
                android:background="@drawable/radius"
                android:backgroundTint="@color/redTransp" />

            <!--BUTTOM GNSS-->
            <ImageView style="@style/img_navegacao"
                android:background="@drawable/gnss" />

            <!--BUTTOM HISTORICO-->
            <View style="@style/button_navegacao"
                android:id="@+id/historico"
                android:layout_alignParentRight="true"
                android:background="@drawable/radius"
                android:backgroundTint="@color/greenTransp"/>

            <!--BUTTOM HISTORICO-->
            <ImageView style="@style/img_navegacao"
                android:layout_marginEnd="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/historico" />
        </RelativeLayout>

        <!-- BUTOES DE GNSS E HISTORICO-->
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <!--BUTTOM CREDITO-->
            <View style="@style/button_navegacao"
                android:id="@+id/creditos"
                android:layout_centerHorizontal="true"
                android:background="@drawable/radius"
                android:backgroundTint="@color/orangeTransp" />

                <!--BUTTOM CREDITO-->
                <ImageView style="@style/img_navegacao"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/creddito" />
        </RelativeLayout>

